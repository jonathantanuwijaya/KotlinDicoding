<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivGambar"
            android:layout_width="153dp"
            android:layout_height="168dp"
            android:src="@drawable/nasipadang" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nama Makanan"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvDeskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi" />

            <TextView
                android:id="@+id/tvHargaMakanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga " />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginHorizontal="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivlezat"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/lezat" />

            <ImageView
                android:id="@+id/ivlucu"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/lucu" />

            <ImageView
                android:id="@+id/ivmakan"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/makan" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daerah Makanan"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvasaldaerah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="  "

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Makanan"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvdeskmakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Makanan"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>